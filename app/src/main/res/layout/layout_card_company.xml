<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_100sdp"
    android:id="@+id/layout_card_pickup"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/_6sdp"
    app:cardElevation="@dimen/space_2x">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/txt_pickup"
            style="@style/font_lato_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/space_4x"
            android:layout_marginVertical="@dimen/_20sdp"
            android:text="@string/company"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_20ssp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_desc_pickup"
            style="@style/font_lato_regular"
            android:layout_width="0dp"
            android:layout_marginEnd="@dimen/space_3x"
            android:layout_height="wrap_content"
            android:layout_marginVertical="12dp"
            android:text="@string/pickup_your_children_from_here"
            android:textColor="#696969"
            android:textFontWeight="500"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@+id/imageView6"
            app:layout_constraintStart_toStartOf="@+id/txt_pickup"
            app:layout_constraintTop_toBottomOf="@+id/txt_pickup"
            tools:targetApi="p" />


        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="0dp"
            android:src="@drawable/ic_card_company"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>