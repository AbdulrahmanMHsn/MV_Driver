<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/lato_regular</item>
    </style>

    <style name="noAnimTheme" parent="AppTheme.NoActionBar">
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="field_title" >
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/field_title</item>
    </style>

    <style name="App_EditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="App_button" >
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="error_message" >
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textColor">@color/red</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="NavDrawer" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/lato_regular</item>
    </style>

    <!-- header Title-->
    <style name="header_title">
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="font_lato_light">
        <item name="android:fontFamily">@font/lato_light</item>
    </style>

    <style name="font_lato_regular">
        <item name="android:fontFamily">@font/lato_regular</item>
    </style>

    <style name="font_lato_bold">
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <style name="font_montserrat_light">
        <item name="android:fontFamily">@font/montserrat_light</item>
    </style>

    <style name="font_montserrat_medium">
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="font_montserrat_regular">
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="font_montserrat_semi_bold">
        <item name="android:fontFamily">@font/montserrat_semibold</item>
    </style>

    <style name="font_comfortaa_light">
        <item name="android:fontFamily">@font/comfortaa_light</item>
    </style>

    <style name="font_comfortaa_regular">
        <item name="android:fontFamily">@font/comfortaa_regular</item>
    </style>

    <style name="font_comfortaa_bold">
        <item name="android:fontFamily">@font/comfortaa_bold</item>
    </style>


    <!-- Base Name Styles -->


    <style name="BlueRide" />

    <style name="BlueRide.Widget" />

    <style name="BlueRide.Layout" />

    <!-- Layout Styles -->
    <style name="BlueRide.Layout.Constraint">
        <item name="android:background">@color/layout_background_color</item>
    </style>


    <!-- App bar -->
    <style name="BlueRide.Widget.AppBar">
        <item name="android:layout_height">@dimen/app_bar_height</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <!-- back btn -->

    <style name="BlueRide.Widget.BackButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:paddingStart">@dimen/space_5x</item>
        <item name="android:paddingEnd">@dimen/space_5x</item>
        <item name="android:paddingBottom">@dimen/space_1x</item>
        <item name="android:paddingTop">@dimen/space_1x</item>
        <item name="android:src">@drawable/ic_back_arrow</item>
    </style>

    <style name="SelectionChip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:textAppearance">@style/customChip</item>
        <item name="android:textColor">@color/selector_selection_chip_text_color</item>
        <item name="chipSurfaceColor">@android:color/transparent</item>
        <item name="chipStrokeColor">@color/grayish</item>
        <item name="chipStrokeWidth">0.5dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="customChip">
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Theme.CustomSplashScreenTheme" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/colorAccent</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_gif</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/AppTheme</item>
    </style>


</resources>
